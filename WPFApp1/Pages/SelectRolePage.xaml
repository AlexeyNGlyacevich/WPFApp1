<Page x:Class="WPFApp1.Pages.SelectRolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApp1.Pages"
      mc:Ignorable="d" 
      DataContext="{Binding Source={StaticResource VmLocator}, Path = SelectRolePageViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectRolePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="30"
                    Padding="30"
                    Command="{Binding LoginDirector}"
                    Content="Войти как Директор"/>
            
            <Button Margin="30"
                    Padding="30"
                    Command="{Binding LoginEngineer}"
                   
                    Content= "Управление" />
        </StackPanel>
    </Grid>
</Page>
